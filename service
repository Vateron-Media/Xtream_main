#!/bin/sh

SCRIPT=/home/xtreamcodes
USER=$(whoami)

if [ "$USER" != "root" ]; then
  echo "Please run as root!"
  exit 1
fi

log() {
  echo "$(date '+%Y-%m-%d %H:%M:%S') - $1"
}

start() {
  pids=$(pgrep -u xtreamcodes nginx | wc -l)
  if [ "$pids" -ne 0 ]; then
    log "XC_VM is already running"
    return 1
  fi

  log "Starting XC_VM..."
  sudo chown -R xtreamcodes:xtreamcodes /sys/class/net || exit 1
  sudo chown -R xtreamcodes:xtreamcodes "$SCRIPT/content/streams" || exit 1
  sudo chown -R xtreamcodes:xtreamcodes "$SCRIPT/tmp" || exit 1
  if [ -f $SCRIPT/bin/redis/redis-server ]; then
    sudo -u xtreamcodes $SCRIPT/bin/redis/redis-server $SCRIPT/bin/redis/redis.conf >/dev/null 2>&1 &
  fi
  sudo -u xtreamcodes "$SCRIPT/bin/nginx/sbin/nginx" >/dev/null 2>&1 || log "Failed to start nginx"
  sudo -u xtreamcodes "$SCRIPT/bin/nginx_rtmp/sbin/nginx_rtmp" >/dev/null 2>&1 || log "Failed to start nginx_rtmp"
  sudo -u xtreamcodes "$SCRIPT/bin/daemons.sh" || log "Failed to start daemons.sh"
  sudo "$SCRIPT/bin/php/bin/php" "$SCRIPT/includes/cli_tool/startup.php" || log "Failed to start startup.php"
  sudo -u xtreamcodes "$SCRIPT/bin/php/bin/php" "$SCRIPT/includes/cli_tool/signals.php" >/dev/null 2>&1 &
  sudo -u xtreamcodes "$SCRIPT/bin/php/bin/php" "$SCRIPT/includes/cli_tool/watchdog.php" >/dev/null 2>&1 &
  sudo -u xtreamcodes "$SCRIPT/bin/php/bin/php" "$SCRIPT/includes/cli_tool/queue.php" >/dev/null 2>&1 &
    if [ -f $SCRIPT/includes/cli_tool/cache_handler.php ]; then
    sudo -u xtreamcodes $SCRIPT/bin/php/bin/php $SCRIPT/includes/cli_tool/cache_handler.php >/dev/null 2>&1 &
  fi
  log "XC_VM started in foreground."
  sleep infinity
}

stop() {
  pids=$(pgrep -u xtreamcodes nginx | wc -l)
  if [ "$pids" -eq 0 ]; then
    log "XC_VM is not running"
    return 1
  fi
  log "Stopping XC_VM..."
  sudo pkill -u xtreamcodes nginx
  sudo pkill -u xtreamcodes nginx_rtmp
  sleep 1
}

restart() {
  stop
  start
}

reload() {
  pids=$(pgrep -u xtreamcodes nginx | wc -l)
  if [ "$pids" -eq 0 ]; then
    log "XC_VM is not running"
    return 1
  fi
  log "Reloading XC_VM..."
  sudo -u xtreamcodes "$SCRIPT/bin/nginx/sbin/nginx" -s reload
  sudo -u xtreamcodes "$SCRIPT/bin/nginx_rtmp/sbin/nginx_rtmp" -s reload
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  reload)
    reload
    ;;
  restart)
    restart
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|reload}"
    ;;
esac

exit 0
